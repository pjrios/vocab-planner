rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isTeacherUid() {
      return request.auth != null && request.auth.uid in ['eDmhihsUgXeMjc2wJGVKNbYLHXC2'];
    }
    function isAllowlistedTeacher() {
      return request.auth != null && request.auth.token.email in ['rosjavier9@gmail.com'];
    }
    function isTeacher() {
      return isTeacherUid() || isAllowlistedTeacher();
    }
    
    // Vocabularies Collection
    // Readable by everyone
    // Writable by teachers (restricted UID list)
    match /vocabularies/{vocabId} {
      allow read: if true;
      allow write: if isTeacher();
    }
    
    // User roles
    match /userRoles/{uid} {
      allow read: if request.auth != null && request.auth.uid == uid;
      allow write: if isTeacher()
                   || (request.auth != null
                       && request.auth.uid == uid
                       && request.resource.data.role == 'student'); // allow self-create as student
    }

    // Student Progress Collection
    // Readable by owner or teacher; writable by owner or teacher
    match /studentProgress/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isTeacher());
      allow write: if request.auth != null && (request.auth.uid == userId || isTeacher());
    }

    // Leaderboard Scores
    // Readable by authenticated users
    // Writable by authenticated users (own score)
    match /scores/{scoreId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
  }
}
